{
  "name": "casanova-api",
  "version": "1.0.0",
  "description": "API backend for CasaNova - International mobility information aggregator",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "scrape": "tsx src/scripts/scrape-all.ts",
    "scrape:visa": "tsx src/scripts/scrape-visa.ts",
    "scrape:job": "tsx src/scripts/scrape-job.ts",
    "scrape:housing": "tsx src/scripts/scrape-housing.ts",
    "typecheck": "tsc --noEmit",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-express": "11.1.9",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/typeorm": "11.0.0",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.6",
    "cheerio": "^1.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "reflect-metadata": "0.2.2",
    "robots-parser": "^3.0.1",
    "rxjs": "7.8.2",
    "sqlite3": "5.1.7",
    "ts-node": "10.9.2",
    "typeorm": "0.3.27"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "24.10.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
